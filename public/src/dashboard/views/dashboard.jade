                    p.p-centered.size-stats
                        span.light
                            | #
                        strong
                            | {{rank}}
                        span.light
                            | °
                .spacer-5
                p
                    strong
                        | Rank
                    span.light
                        | Info
            .col-md-3.col-sm-6.text-center.height-187
                .height-150.relative
                    p.p-centered.size-stats
                        strong
                            | {{balance | number}}
                        span.light
                            | Lisk
                .spacer-5
                p
                    strong
                        | Forged
                    span.light
                        | Amount
            .col-md-3.col-sm-6.text-center.height-187
                .height-150.relative
                    p.p-centered.size-stats
                        strong
                            | {{number_of_voters}}
                .spacer-5
                p
                    span.light
                        | n°
